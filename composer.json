{
    "name": "cybercog/yii2-wschat",
    "description": "Online chat based on web sockets and ratchet php",
    "type": "yii2-extension",
    "keywords": ["yii2","extension","backbone","ratchet", "websocket"],
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Ievgen Sentiabov",
            "email": "ievgen.sentiabov@gmail.com"
        }
    ],
    "require": {
        "yiisoft/yii2": "*",
        "yiisoft/yii2-mongodb": "*",
        "yiisoft/yii2-bootstrap": "*",
        "cboden/ratchet": "0.3.*",
        "bower-asset/underscore": "*",
        "bower-asset/backbone": "*",
        "bower-asset/jquery-cookie": "*",
        "bower-asset/pnotify": "*",
        "bower-asset/fontawesome": "*"
    },
    "require-dev": {
        "yiisoft/yii2-codeception": "*",
        "codeception/codeception": "2.*",
        "codeception/specify": "*",
        "codeception/verify": "*"
    },
    "autoload": {
        "psr-4": {
            "jones\\wschat\\": ""
        }
    }
}